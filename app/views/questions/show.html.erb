<h1>投稿詳細ページ</h1>
<h3><%= @post.user.email %></h3>
<h3><%= @post.content %></h3>
<h3>いいね件数: <%= @post.answers.count %></h3>
<% if current_user.already_answered?(@post) %>
  <%= button_to 'いいねを取り消す', question_answer_path(@post), method: :delete %>
<% else %>
  <%= button_to 'いいね', question_answers_path(@post) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @post.answered_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<%= link_to "ホームへ戻る", lessons_path %>